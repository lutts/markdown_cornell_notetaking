{
	"scopeName": "cornell-question.injection",
	"injectionSelector": "L:text.html.markdown",
	"patterns": [
	  { "include": "#cornell-question" }
	],
	"repository": {
	  "cornell-question": {
		"patterns": [
			{
				"name": "cornell.question",
				"begin": "(^|\\G)((?:q|Q):) (?=\\S)",
				"beginCaptures": {
					"2": {
						"name": "cornell.question.marker"
					}
				},
				"patterns": [
					{
						"include": "text.html.markdown#paragraph"
					}
				],
				"while": "(^|\\G)((?=\\s*[-=]{3,}\\s*$)|[ ]{4,}(?=\\S))"
			}
		]
	  }
	}
  }
  