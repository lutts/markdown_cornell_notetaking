{
	"scopeName": "cornell-question.injection",
	"injectionSelector": "L:meta.paragraph.markdown",
	"patterns": [
	  { "include": "#cornell-question" }
	],
	"repository": {
	  "cornell-question": {
		"patterns": [
			{
				"name": "cornell.question",
				"begin": "^(q|Q): ",
				"end": "\n",
				"patterns": [
					{
						"include": "text.html.markdown"
					}
				]

			},
			{
				"match": "^(a|A): ",
				"name": "cornell.answer"
			},
			{
				"match": "{{(.*?)}}((?:\\([^)]*?\\))?)",
				"name": "supermemo.cloze"
			}
		]
	  }
	}
  }
  